#######################################################################
# automatically start i3-config-wizard to offer the user to create a
# keysym-based config which used their favorite modifier (alt or windows)
#
# i3-config-wizard will not launch if there already is a config file
# in ~/.i3/config.
#
# Please remove the following exec line:
#######################################################################
exec_always --no-startup-id $HOME/.i3/polybar_launch.sh
exec --no-startup-id ~/.i3/dual_monitors.sh
exec --no-startup-id nm-applet
exec --no-startup-id dunst -config ~/.i3/dunstrc
exec --no-startup-id roxterm
#exec --no-startup-id slack
#exec --no-startup-id skypeforlinux
#exec --no-startup-id firefox
exec --no-startup-id conky -c ~/.i3/conky/.conkyrc
exec --no-startup-id dropbox start

bindsym $mod+t border toggle
bindsym $mod+m move workspace to output left

# scrot
bindsym --release Print exec --no-startup-id scrot
bindsym --release Shift+Print exec --no-startup-id scrot -s

# volume control
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 2%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 2%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1

# brightness control
bindsym XF86MonBrightnessDown exec xbacklight -steps 1 -time 0 -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -steps 1 -time 0 -inc 10

#lock screen
bindsym $mod+Escape exec ~/.i3/i3lock_screen.sh

#keyboard layout
bindcode Mod1+50 exec --no-startup-id pkill -RTMIN+2 i3blocks

#class                  border	backgr.	text	indicator
client.focused			$green	$green	$white	$dark
client.focused_inactive $gray	$gray	$black	$black
client.unfocused        $gray	$gray	$black	$black
